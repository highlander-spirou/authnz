generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum RoleEnum {
  ADMIN
  EDITOR
  USER
}

enum TierEnum {
  ADMIN
  USER
}

model UserBasicCred {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
}

model UserInfo {
  id        Int       @id
  name      String?
  activated DateTime?
  tier      TierEnum  @default(USER)
}

model LoginSession {
  id              Int      @id @default(autoincrement())
  refresh_token   String   @unique
  user_id         Int
  browser_info    String
  geolocation     String?
  latest_activity DateTime @default(now()) @updatedAt
  expired         DateTime
}

model Otp {
  id          Int     @id @default(autoincrement())
  user_id     Int     @unique
  otp_enabled Boolean @default(false)
  otp_base32  String?
}

model Biometric {
  id                Int     @id @default(autoincrement())
  user_id           Int     @unique
  current_challenge String?
  authenticator     Json?
}

model Team {
  id       Int     @id @default(autoincrement())
  name     String?
  owner_id Int
}

model TeamMember {
  user_id Int
  team_id Int
  role    RoleEnum @default(USER)

  @@id([user_id, team_id])
}

model MfaVerifyStatus {
  id          Int       @id @default(autoincrement())
  user_id     Int       @unique
  uuid        String?   @unique
  uuid_ttl    DateTime? @updatedAt
}
