{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020",
    "experimentalDecorators": true, 
    "emitDecoratorMetadata": true, 
    /* Modules */
    "module": "commonjs",
    "resolveJsonModule": true,
    /* Emit */
    "outDir": "./build",
    /* Interop Constraints */
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": true,
    /* Completeness */
    "skipLibCheck": true,
    "noImplicitAny": false
  },
  "ts-node": {
    "swc": true
  }
}